find3Numbers(arr, n, x) {
       arr= arr.sort((a,b)=>a-b);
           for(let i=0;i<n-2;i++){
               let left=i+1;
                 let right =n-1;
              while(left<right){
           if(arr[i]+arr[left]+arr[right]==x){
                return true;
           }else if(arr[i]+arr[left]+arr[right]<x){
               left++;
           }else{
               right--;
           }
           }
               
           }
           return false;
           }
            
       }
